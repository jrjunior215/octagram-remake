  <div class="logo">
    <a href="/home">
      <img src="/img/icon.png" alt="Logo">
    </a>
  </div>
  <div class="container_navbar">
    <ul>
      <li>
        <a href="/home">
          <i class="fas fa-pager"></i>
          <span class="nav-item">Feed</span>
        </a>
      </li>
      <li>
        <a href="/search">
          <i class="fas fa-compass"></i>
          <span class="nav-item">Find Creator</span>
        </a>
      </li>
      <li>
        <a href="/message">
          <i class="fas fa-envelope"></i>
          <span class="nav-item">Message</span>
        </a>
      </li>
      <li>
        <a href="/setting">
          <i class="fas fa-gear"></i>
          <span class="nav-item">Setting</span>
        </a>
      </li>
    </ul>

    <div class="underline"></div>

    <div class="limit_octagram_list">
      <div class="title_nav">
        <span>Membership</span>
      </div>
    </div>

    <div class="limit_octagram_list">
      <div class="octagram_list" id="octagram_list">
      </div>
    </div>
  </div>

  <div class="profile">

    <div class="profile_link">
      <img src="/img/profile.png" alt="Profile">
      <div class="profile_name">
        <% if (loggedIn) { %>
          <h1>
            <%= loggedIn.name %>
          </h1>
          <h2>
            <%= loggedIn.role %>
          </h2>
          <% } %>
      </div>
    </div>

    <div onclick="" class="ellipsis">
      <a onclick="ShowEllipsis()" class="drop_menu"><i class="fas fa-ellipsis-vertical drop_menu"></i></a>
      <div class="popup">
        <ul class="ellipsis_popups" id="ellipsis_popups">
          <li><a href="#">Creator resources</a></li>
