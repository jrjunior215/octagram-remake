<div class="container_home">
    <div class="container_page">
        <form class="container_package" action="/package/create" method="POST">
            <div class="header_package">
                <div class="header_package_left">
                    <h1>Create Package</h1>
                </div>
                <div class="header_package_right">
                    <a href="/<%= loggedIn.pname %>/package">
                        <i class="fa-solid fa-arrow-left"></i>
                        <span>back</span>
                    </a>
                    <button>Create</button>
                </div>
            </div>
            <div class="package_text_box">
                <input type="hidden" name="id_creator" value="<%= loggedIn.id_creator %>">
                <input class="package_text_title" type="text" name="price" id="price" placeholder="Price / month">
                <input class="package_text_title" type="text" name="title" id="title" placeholder="Package name">
                <textarea class="package_text_desc" type="text" name="desc" id="desc" placeholder="Add your desc"></textarea>
            </div>
        </form>
    </div>
</div>