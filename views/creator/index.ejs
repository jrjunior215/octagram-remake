<div class="container_home">
    <div class="container_page">
        <div class="creator_page">
            <div class="bg_creator">
            </div>
            <div class="limit_creator_profile">
                <div class="creator_profile">
                    <div class="creator_content">
                        <img src="<%=loggedIn.img_creator%>" alt="">
                        <div class="creator_detail">
                            <span class="creators_name">
                                <%=loggedIn.pname%>
                            </span>
                            <span class="creators_desc">Creating website octagram</span>
                            <p>5.2M Members 41 Posts</p>
                        </div>
                    </div>
                    <div class="post">
                        <a href="#" class="btn_post"><i class="fa-solid fa-pen-to-square fa-lg fas"></i>Create</a>
                    </div>
                </div>
            </div>
            <div class="limit_navbar">
                <div class="navbar">
                    <a href="#">Home</a>
                    <a href="#">About</a>
                    <a href="#">Review</a>
                </div>
            </div> 

            <div class="limit_post">
                <div class="creator_post">

                <% if (posts.length > 0) { %>

                    <% for(var i=0; i < posts.length; i++) { %>
                        <div class="post_box">
                            <div class="profile_post">
                                <img src="<%=loggedIn.img_creator%>" alt="profile" class="profile_img_post">
                                <div class="creator_post_name">
                                    <span class="creator_name">
                                        <%=loggedIn.pname%>
                                    </span>
                                    <span class="post_time">1 hr.</span>
                                </div>
                            </div>
                            <div class="post_content_limit">
                                <div class="post_content">
                                    <span class="post_title"><%=posts[i].title%></span>
                                    <span class="post_desc"><%=posts[i].desc%></span>
                                </div>
                            </div>
                        </div>
                        <% } %>
                <%} else { %>
                    <div class="post_alert">
                        <h1>There is no post in this creator.</h1>
                    </div>
                <% } %>
                </div>
            </div>

        </div>
    </div>
</div>