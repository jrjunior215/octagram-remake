<div class="container_home">
    <div class="container_page">
        <form class="container_post_text" action="/text/create" method="POST">
            <div class="header_post_text">
                <div class="header_post_text_left">
                    <h1>Create text post</h1>
                </div>
                <div class="header_post_text_right">
                    <a href="/post/create">
                        <i class="fa-solid fa-arrow-left"></i>
                        <span>back</span>
                    </a>
                    <button>Post</button>
                </div>
            </div>
            <div class="post_text_box">
                <input type="hidden" name="id_creator" value="<%= loggedIn.id_creator %>">
                <input class="post_text_title" type="text" name="title" id="title" placeholder="Add your title">
                <textarea class="post_text_desc" type="text" name="desc" id="desc" placeholder="Add your desc"></textarea>
            </div>
        </form>
    </div>
</div>